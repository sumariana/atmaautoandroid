<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shadowyborder"
        android:layout_margin="5dp">

        <!--data pengadaan-->

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tanggal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey">

            </LinearLayout>
            <TextView
                android:id="@+id/namakonsumen"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Konsumen"/>
            <TextView
                android:id="@+id/totalharga"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Harga"/>
        </LinearLayout>

        <!--status-->

        <LinearLayout
            android:id="@+id/detailpengadaan"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/statuspenjualan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_katalog"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!--kontrol panel-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picedit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@mipmap/edit"/>
            <ImageView
                android:id="@+id/picdel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/hapus"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>