<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetilList.DetailKatalog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/namasparepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Nama Sparepart"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/hargasparepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Sparepart"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkgrey">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/kodesparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Kode Sparepart"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:id="@+id/jumlahsparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Stok"
                android:textSize="15dp"
                android:gravity="fill"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/darkgrey">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/merksparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Merk"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:id="@+id/tipesparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Tipe Barang"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="*Untuk Pembelian Sparepart bisa datang langsung ke Cabang Atma Auto terdekat di Kota anda."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/darkgrey">
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>