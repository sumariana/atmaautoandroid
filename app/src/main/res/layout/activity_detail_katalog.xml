<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetilList.DetailKatalog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:background="@color/grey">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/border_katalog"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/namasparepart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:text="Nama Sparepart"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/hargasparepart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:text="Harga Sparepart"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/border_form">
            <TextView
                android:id="@+id/kodesparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Kode Sparepart"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:id="@+id/merksparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Merk"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:id="@+id/tipesparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Tipe Barang"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:id="@+id/jumlahsparepart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Jumlah Stok"
                android:textSize="15dp"
                android:gravity="fill"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*Untuk Pembelian Sparepart bisa datang langsung ke Cabang Atma Auto terdekat di Kota anda."/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>