<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetilList.DetailSparepart">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/buttonback"/>
            <Button
                android:id="@+id/selectimage"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Pilih Gambar"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:orientation="vertical">
                <EditText
                    android:editable="false"
                    android:id="@+id/kodesparepart"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Kode Sparepart"/>
                <EditText
                    android:id="@+id/namasparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nama Sparepart"/>
                <EditText
                    android:id="@+id/tipebarang"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Tipe Sparepart"/>
                <EditText
                    android:id="@+id/merksparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Merk Sparepart"/>
                <EditText
                    android:id="@+id/hargabelisparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Harga Beli Sparepart"/>
                <EditText
                    android:id="@+id/hargajualsparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Harga Jual Sparepart"/>
                <EditText
                    android:id="@+id/jumlahsparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Jumlah Stok Sparepart"/>
                <EditText
                    android:id="@+id/jumlahmin"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Jumlah Minimum Sparepart"/>
                <TextView
                    android:id="@+id/raksparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Rak Penempatan"/>
                <TextView
                    android:id="@+id/raksebelum"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Rak Sebelumnya"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/place"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                    </Spinner>
                    <Spinner
                        android:id="@+id/room"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                    </Spinner>
                    <EditText
                        android:id="@+id/nomor"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:hint="Nomor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/patchsparepart"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/buttonback"
                        android:text="Update"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>