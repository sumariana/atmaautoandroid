<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listSparepart"
    android:layout_marginTop="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/shadowyborder">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_sparepart_adapter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nama Sparepart"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"></LinearLayout>

            <TextView
                android:id="@+id/harga_sparepart_adapter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="Harga Sparepart"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/jumlah_sparepart_adapter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="jumlah Sparepart"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>