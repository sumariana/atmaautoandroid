<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/kotak">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@drawable/border_mainmenu">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_konsumen_adapter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="Nama Konsumen"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/telepon_konsumen_adapter"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="Telepon Konsumen"
                android:textColor="@android:color/white"

                />
        </LinearLayout>
        <Button
            android:id="@+id/deletebuttonadapter"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:layout_gravity="center"
            android:background="@drawable/buttonback"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>