<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahTransaksiSparepart">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <TextView
                android:id="@+id/datepicker"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsumen"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnerkonsumen"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="81dp"
                android:layout_marginLeft="10dp">
            </Spinner>
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motor Konsumen"
                android:layout_marginTop="112dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnermotorkonsumen"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="133dp"
                android:layout_marginLeft="10dp">
            </Spinner>
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sparepart"
                android:layout_marginTop="163dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnersparepart"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="184dp"
                android:layout_marginLeft="10dp">
            </Spinner>
            <Button
                android:id="@+id/addcart"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/buttonback"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Add to Cart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/total"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="115dp"
                android:text="Diskon (%)"/>
            <EditText
                android:id="@+id/diskon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="135dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="190dp"
                android:text="Total Harga"/>
            <EditText
                android:id="@+id/totalharga"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="211dp"/>

            <EditText
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/datepicker"
                android:layout_marginBottom="33dp"
                android:hint="Jumlah" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_detailtransaksi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/postpenjualan"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonback"
                android:text="Pesan"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>